a
        text-decoration: none
        color inherit

img
    max-width 100%

strong
    font-weight: bold

button:hover
    cursor pointer

.tac
    text-align: center

[v-cloak]
    display: none

placeholderColor(color)
    &::-webkit-input-placeholder /* WebKit, Blink, Edge */
        color: color

    &:-moz-placeholder /* Mozilla Firefox 4 to 18 */
        color: color
        opacity: 1

    &::-moz-placeholder /* Mozilla Firefox 19+ */
        color: color
        opacity: 1

    &:-ms-input-placeholder  /* Internet Explorer 10-11 */
        color: color

    &::-ms-input-placeholder/* Microsoft Edge */
        color: color

hover()  //use: +hover() a pod odsadené hover štýly
    @media(hover: hover)
        &:hover
            {block}